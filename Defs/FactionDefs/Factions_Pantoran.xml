        </caravanTraderKinds>
        <visitorTraderKinds>
            <li>Visitor_Pantoran_Standard</li>
        </visitorTraderKinds>
        <baseTraderKinds>
            <li>Base_Pantoran_Standard</li>
        </baseTraderKinds>
        <allowedArrivalTemperatureRange>
            <min>-100</min>
            <max>28</max>
        </allowedArrivalTemperatureRange>
