                <!-- Normal fights, standard mix -->
                <kindDef>Combat</kindDef>
                <options>
					<Pantoran_Villager>5</Pantoran_Villager>
                    <Pantoran_Town_Guard>10</Pantoran_Town_Guard>
                    <Pantoran_Town_Councilman>10</Pantoran_Town_Councilman>
                </options>
            </li>
            <li>
                <kindDef>Peaceful</kindDef>
                <options>
                    <Pantoran_Villager>20</Pantoran_Villager>
                    <Pantoran_Town_Guard>10</Pantoran_Town_Guard>
                    <Pantoran_Town_Councilman>10</Pantoran_Town_Councilman>
                </options>
            </li>
            <li>
                <kindDef>Trader</kindDef>
                <traders>
                    <Pantoran_Town_Trader>1</Pantoran_Town_Trader>
                </traders>
                <carriers>
                    <Muffalo>6</Muffalo>
                    <Dromedary>5</Dromedary>
                    <Alpaca>2</Alpaca>
                    <Elephant>1</Elephant>
                </carriers>
                <guards>
                    <Pantoran_Villager>3</Pantoran_Villager>
                    <Pantoran_Town_Guard>10</Pantoran_Town_Guard>
				</guards>
            </li>
            <li>
                <kindDef>Settlement</kindDef>
                <options>
				    <Pantoran_Villager>10</Pantoran_Villager>
                    <Pantoran_Town_Guard>10</Pantoran_Town_Guard>
                    <Pantoran_Town_Councilman>10</Pantoran_Town_Councilman>
                </options>
            </li>
